w = 1 #Variable for while loop

c = 0 #Variable for courtyard loop

m = 0 #Variable for Master Bedroom loop

d = 0 #Variable for Dining Hall loop

t = 0 #Table loop

i = 0 #Variable for Interview Loop

SL = ['kanye east', 'warren buffoon', 'jeffery bagels', 'bill fences', 'berry jelly-son'] #SL is for Suspect List

ESL = [] #ESL is Eliminated Suspects List

J = [] #This is you Journal

while w == 1:
    
    print('You are told by a fellow police officer that you are assigned to the investigation of the murder of Normandi Charles. He tells')
    
    UI = input('\nWhere do you want to go?: ') #UI is for User Input
    
    if UI == 'journal':
        
        UI = input('\ndo you want to write or read your journal?: ')
        
        if UI == 'write':
            
            UI = input('\nWhat do you add to your journal?: ')
            J.append(UI)
        
        else:
            
            if UI == 'read':
                
                print(J)
#Eliminated Suspect List
    if UI =='eliminate':
        
        print(SL)
        
        UI = input('\nWho do you want to remove from the suspect list?\n')
        if UI in SL:
            SL.remove(UI)
        
            ESL.append(UI)
        else:
            print(UI, 'is not in your suspect list')
    if UI == 'supsects':
        print(SL)    
        
#Courtyard
                
    if UI == 'courtyard':
        
        c = 1
        
        while c == 1:
        
            UI = input('\nYou are in the Courtyard: ')
            
            if UI == ('talk to police'):
            
                UI == input('Who do you want to detain?')
                
                if UI == 'bill fences':
                
                    print('\nCongrats!!\nYOU SOLVED THE CASE!!\nAs a reward, you get a $10 gift cardðŸ’°\n')
                
        
            if UI == 'interview':
                
                i = 1
                
                while i == 1:
                    
                    print(SL)

                    UI = input('who do you want to interview?: ')
                    
                    if UI == 'leave':
                    
                        i = 0
            
                    if UI in SL and not UI == 'leave':
                
                        if UI == 'kanye east':
                        
                            print("\nHere are the notes that you gathered from Kanye's interview:\nKanye East;\n1.No allergies\n2.Billionare Mcdonald's worker\n3.Wearing black cargo pants with blue wool jacket, and a leopard mask\n")

                
                        if UI == 'warren buffoon':
                        
                            print("\nHere are the notes that you gathered from Warren's interview:\nWarren Buffoon;\n1.No allergies\n2.Billionare Real Estate Giant\n3.Wearing an all-white jumpsuit, and black phone mask\n")
                
                        if UI == 'jeffery bagels':
                    
                            print("\nHere are the notes that you gathered from Jeffery's interview:\nJeffery Bagels;\n1.sNo allergies\n2.Billionare E-Commerce \n3.Disco Outfit with blue wool pants, and peacock feather mask\n")
                
                        if UI == 'bill fences':
                    
                            print("\nHere are the notes that you gathered from Bill's interview:\nBill Fences;\n1.Lactose Intolerant\n2.Billionare Tech Company Founder\n3.Wearing a tropical outfit with blue wool glasses")
                
                        if UI == 'berry jelly-son':
                    
                            print("\nHere are the notes that you gathered from Berry's interview:\nBerry Jelly-Son;\n1.Allergic to Peanut Butter\n2.Billionare Software Commericalizer\n3.Wearing neon clothing with a blue wool tie, and a neon face mask\n")    
        
                    
                else:
                    if not UI == 'leave':
                        
                        print('\n', UI, 'is not in your suspect list.')
                
            if UI == 'leave':
                
                c = 0
                
#Master Bedroom                
            
    if UI == 'master bedroom':
            
        m = 1
        
        while m == 1:
        
            print('\nYou are in the Master Bedroom.')
            print('\nThere is a Closet and a Bathroom. ')
                
            UI = input('\nWhere do you want to go?: ')
        
    #Closet
           
            if UI == 'closet':
                
                print('\nYou are in the Closet.')
                UI = input('\nYou find a bloody knife with something furry on the handle. Do you want to search or ignore it? ')
            
                if UI == 'search':
                    
                    print('\nThe furry bit is a small tear of blue wool that seems to have been ripped off of some clothing quite violently.')
            
    #Bathroom
           
            if UI == 'bathroom':
                
                print('\nYou are in the Bathroom. ')
                UI = input('\nThere is nothing of interest here except the faint smell of money.:')
                
                if UI == 'leave':
            
                    m = 0
                     
#Dining Hall
      
    if UI == 'dining hall':
            
        d = 1
        
        while d == 1:
        
            print('\nYou are in the Dining Hall.')
            print('\nThere is a table and a kitchen. ')
                
            UI = input('\nDo you want to inspect the table or the kitchen?: ')
        
    #Table
           
            if UI == 'table':
                
                t = 1
                
                while t == 1:
                
                    print('\nYou see a large table.')
                    UI = input('\nYou see the 3 plates, each with a sliver of a paper underneath, type 1, 2, or 3 to check the respective plates: ')
            
                    if UI == '1':
                     
                        print('\nOn the paper is text written as such, He nearly destroyed your company dude, you gotta kill him: ')
                        
                    if UI == '2':
                        
                        print('\nOn the paper is text written as such, Father, I want you to know that college is going well, I am on the Deans List: ')

                    if UI == '3':
                
                        print('\nOn the paper is text written as such, Honey, I love you. Like a diamond in the night sky, your beauty glistens.: ')
                    
                        if UI == 'leave':
                            
                            t = 0
                        
    #bathroom
           
        if UI == 'bathroom':
            
            print('\nYou are in the Bathroom. ')
